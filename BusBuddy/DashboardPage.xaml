<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusBuddy.DashboardPage"
             Title="Dashboard">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
        <!-- Example dashboard cards -->
        <Frame Grid.Row="0" Grid.Column="0" Margin="10" Padding="20" BackgroundColor="#F0F0F0" CornerRadius="10">
            <StackLayout>
                <Label Text="Total Routes" FontAttributes="Bold" FontSize="16" />
                <Label Text="42" FontSize="28" TextColor="#0078D7" />
            </StackLayout>
        </Frame>
        <Frame Grid.Row="0" Grid.Column="1" Margin="10" Padding="20" BackgroundColor="#F0F0F0" CornerRadius="10">
            <StackLayout>
                <Label Text="Active Drivers" FontAttributes="Bold" FontSize="16" />
                <Label Text="8" FontSize="28" TextColor="#0078D7" />
            </StackLayout>
        </Frame>
        <!-- Add more dashboard widgets below as needed -->
        <CollectionView Grid.Row="1" Grid.ColumnSpan="2" Margin="10" ItemsSource="{Binding RecentRoutes}">
            <CollectionView.Header>
                <Label Text="Recent Routes" FontAttributes="Bold" FontSize="18" Margin="0,10,0,5" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10" BackgroundColor="#FFFFFF" CornerRadius="8">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Date}" FontSize="12" TextColor="#888" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
